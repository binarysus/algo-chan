{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "paths": {
      "#commands": ["./src/commands"],
      "#types": ["./src/types/Command"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
